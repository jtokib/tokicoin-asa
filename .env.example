# TokiCoin Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# This file is safe to commit to version control

# Algorand Network Configuration
ALGORAND_NETWORK=testnet
# Options: testnet, mainnet

# Algorand Node URLs (optional - will use AlgoNode if empty)
TESTNET_ALGOD_URL=https://testnet-api.algonode.cloud
MAINNET_ALGOD_URL=https://mainnet-api.algonode.cloud

# Creator Account Mnemonic (25 words)
# ⚠️ NEVER put real mnemonic here - use .env.local
CREATOR_MNEMONIC=your_25_word_mnemonic_phrase_here

# Asset Information (fill after ASA creation)
ASSET_ID=your_asset_id_here
ASSET_NAME=TokiCoin
ASSET_UNIT_NAME=TOKI

# Website Configuration (for Vite build)
VITE_ASSET_ID=your_asset_id_here
VITE_NETWORK=testnet
VITE_WEBSITE_URL=https://your-tokicoin-site.netlify.app

# Development Settings
DEBUG=false
VERBOSE_LOGGING=false

# Security Settings
ENABLE_MNEMONIC_LOGGING=false
REQUIRE_CONFIRMATION=true

# Distribution Settings
DEFAULT_BATCH_SIZE=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=2000

# Test Recipient Addresses (Algorand addresses)
TEST_RECIPIENT_1=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
TEST_RECIPIENT_2=BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB
TEST_RECIPIENT_3=CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC

# Transaction Settings (in microAlgos)
MIN_FEE=1000
SUGGESTED_FEE=1000